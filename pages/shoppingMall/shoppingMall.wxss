/* pages/shoppingMall/shoppingMall.wxss */
.container{
  margin: 0px;
  padding: 0px;
}
.labelbar{
  width: 100%;
  box-sizing: border-box;
  padding-top:13px;
  padding-left: 26px;
  padding-right: 26px;
}
.classification{
  width: 100%;
  margin-top: 50px;
}
.typeName{
  width: 100%;
  font-size: 20px;
  letter-spacing: 1px;
  color: #000000;
  font-weight: bold;
  padding-left: 17px;
}
.typeContainer{
  width: 100%;
  padding-left: 30px;
  padding-right: 30px;
  padding-top: 11px;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;  /*纵轴对齐方式*/
  align-content:stretch;      /*多行对齐方式*/
  justify-content : space-between;  /*横轴对齐方式*/
}
.typeItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 6px;
  /* margin-right: 36px; */
}
.typeImg{
  width: 94px;
}
.typeText{
  font-size: 14px;
  color: #000000;
  letter-spacing: 0.8px;
}