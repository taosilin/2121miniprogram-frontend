/* pages/productList/productList.wxss */
.container{
  margin: 0px;
  padding:0px;
}
.right-text{
  display: inline-block;
  /* position: absolute;
  right: 19px; */
}
.filter{
  width: 100%;
}
.menu{
  width: 100%;
}
.productList{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  justify-content:space-between;
}
.productItem{
  position: relative;
  padding-top: 60rpx;
  padding-bottom: 44rpx;
  box-sizing: border-box;
  height: 471rpx;
  border: 1rpx solid #F5F5F5;
  width: 375rpx;
}
.productImgDiv{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.productImg{
  width: 372rpx;
}
.newIcon{
  width: 88rpx;
  position: absolute;
  top: 48rpx;
  left: -4rpx;
}
.title{
  font-size: 24rpx;
  color: #000000;
  letter-spacing: 1rpx;
  margin-top: 40rpx;
  margin-left: 28rpx;
  margin-bottom: 2rpx;
}
.price{
  font-size: 28rpx;
  color: #000000;
  margin-left: 28rpx;
}
.saledPrice{
  font-size: 28rpx;
  color: #D30E26;
  margin-right: 12rpx;
  margin-left: 28rpx;
}
.originalPrice{
  font-size: 28rpx;
  color: #A6A6A6;
  text-decoration:line-through;/*文字划线*/
}
.priceDiv{
  display: flex;
  flex-direction: row;
  position: relative;
}
.comments{
  font-size: 22rpx;
  color: #ADADAD;
  position: absolute;
  right: 26rpx;
  top: 2rpx;
}