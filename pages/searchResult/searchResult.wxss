/* pages/searchResult/searchResult.wxss */
.container{
  margin:0px;
  padding: 0px;
}
.titleDiv{
  width: 100%;
  box-sizing: border-box;
  padding: 13px 14px 15px 14px;
}
.bigTitle{
  font-size: 22px;
  color: #000000;
  margin-bottom: 5px;
}
.smallTitle{
  font-size: 12px;
  color: #747474;
}
.productList{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  justify-content:space-between;
}
.productItem{
  position: relative;
  padding-top: 30px;
  padding-bottom: 22px;
  box-sizing: border-box;
  height: 260px;
  border: 1px solid #F2F2F2;
}
.productImg{
  
}
.newIcon{
  width: 44px;
  position: absolute;
  top: 24px;
  left: -2px;
}
.title{
  font-size: 12px;
  color: #000000;
  letter-spacing: 0.5px;
  margin-top: 20px;
  margin-left: 14px;
  margin-bottom: 1px;
}
.price{
  font-size: 14px;
  color: #000000;
  margin-left: 14px;
}
.saledPrice{
  font-size: 14px;
  color: #D30E26;
  margin-right: 6px;
  margin-left: 14px;
}
.originalPrice{
  font-size: 14px;
  color: #A6A6A6;
  text-decoration:line-through;/*文字划线*/
}
.priceDiv{
  display: flex;
  flex-direction: row;
  position: relative;
}
.comments{
  font-size: 11px;
  color: #ADADAD;
  position: absolute;
  right: 13px;
  top: 1px;
}

/* 搜索失败 */
.searchHeader{
  width: 100%;
  height: 45px;
  border-bottom: 1px solid #000000;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.inputDiv{
  width:80%;
  margin-left: 22px;
  /* border: tomato 1px solid; */
}
.cancelIcon{
  width: 13.5px;
  padding: 17px;
  /* border: solid 1px blue; */
}
.searchIcon{
  width: 17.5px;
  margin-left: 17px;
  margin-right: 20px;
  /* border: 1px solid green; */
}
.rcmdHeader{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  padding-top: 17px;
  padding-bottom: 17px;
  padding-left: 28px;
}
.titleText{
  font-size: 16px;
  color: #000000;
  letter-spacing: 2px;
}
.promptDiv{
  width: 100%;
  height: 241px;
  font-size: 14px;
  color: #747474;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.line{
  width: 100%;
  height: 15px;
  background-color: #F6F6F6;
}