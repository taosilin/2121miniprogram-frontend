/* pages/searchResult/searchResult.wxss */
.container{
  margin: 0px;
  padding: 0px;
}
.titleDiv{
  width: 100%;
  box-sizing: border-box;
  padding: 26rpx 28rpx 30rpx 28rpx;
}
.bigTitle{
  font-size: 44rpx;
  color: #000000;
  margin-bottom: 10rpx;
}
.smallTitle{
  font-size: 24rpx;
  color: #747474;
}
.productList{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  justify-content:space-between;
}
.productItem{
  position: relative;
  padding-top: 60rpx;
  padding-bottom: 44rpx;
  box-sizing: border-box;
  height: 520rpx;
  border: 1rpx solid #F5F5F5;
  width: 375rpx;
}
.productImg{
  width: 373rpx;
}
.newIcon{
  width: 88rpx;
  position: absolute;
  top: 48rpx;
  left: -4rpx;
}
.title{
  font-size: 24rpx;
  color: #000000;
  letter-spacing: 1rpx;
  margin-top: 40rpx;
  margin-left: 28rpx;
  margin-bottom: 2rpx;
}
.price{
  font-size: 28rpx;
  color: #000000;
  margin-left: 28rpx;
}
.saledPrice{
  font-size: 28rpx;
  color: #D30E26;
  margin-right: 12rpx;
  margin-left: 28rpx;
}
.originalPrice{
  font-size: 28rpx;
  color: #A6A6A6;
  text-decoration:line-through;/*文字划线*/
}
.priceDiv{
  display: flex;
  flex-direction: row;
  position: relative;
}
.comments{
  font-size: 22rpx;
  color: #ADADAD;
  position: absolute;
  right: 26rpx;
  top: 2rpx;
}

/* 搜索失败 */
.searchHeader{
  width: 100%;
  height: 90rpx;
  border-bottom: 2rpx solid #000000;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.inputDiv{
  width:80%;
  margin-left: 44rpx;
  /* border: tomato 1px solid; */
}
.cancelIcon{
  width: 27rpx;
  padding: 34rpx;
  /* border: solid 1px blue; */
}
.searchIcon{
  width: 35rpx;
  margin-left: 34rpx;
  margin-right: 40rpx;
  /* border: 1px solid green; */
}
.rcmdHeader{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  padding-top: 34rpx;
  padding-bottom: 34rpx;
  padding-left: 56rpx;
}
.titleText{
  font-size: 32rpx;
  color: #000000;
  letter-spacing: 4rpx;
}
.promptDiv{
  width: 100%;
  height: 482rpx;
  font-size: 28rpx;
  color: #747474;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.line{
  width: 100%;
  height: 30rpx;
  background-color: #F6F6F6;
}