/* pages/productDetail/productDetail.wxss */
.container{
  margin:0px;
  padding: 0px;
  width: 100%;
  position: absolute;
  /* z-index: 1; */
}
.content{
  width: 100%;
  padding-bottom: 208rpx;
}
.info{
  width: 100%;
  box-sizing: border-box;
  padding-left: 32rpx;
}
.title{
  font-size: 40rpx;
  color: black;
  font-weight: bold;
  margin-top: 2rpx;
  margin-bottom: 12rpx;
}
.subTitle{
  font-size: 26rpx;
  color: #7F7F7F;
}
.cycle{
  font-size: 24rpx;
  color: #A6A6A6;
  margin-top: 14rpx;
  margin-bottom: 20rpx;
}
.imgDiv{
  width: 100%;
  height: 674rpx;
}
/* 滑块容器 */
.swiperContainer{
  width: 100%;
  height: 580rpx;
}
.vol-swiper-item {
  box-sizing: border-box;
}
.productImg{

}

/*未选中指示点样式*/
.swiperContainer .wx-swiper-dot{
  width: 12rpx;
  height: 12rpx;
}
/* .swiperContainer .wx-swiper-dots-horizontal{
  position: absolute;
  margin-left:187.5rpx ;
  margin-bottom: -15px;  
} */
/*选中指示点样式*/
.swiperContainer .wx-swiper-dot-active{
  width:48rpx;
  display: inline-flex;
  height: 12rpx;
  margin-left: 12rpx;
  justify-content:space-between;
}
.swiperContainer .wx-swiper-dot::before{
  content: '';
  flex-grow: 1; 
  background: #747474;
  border-radius: 6rpx;
}

.smallImgDiv{
  width: 100%;
  height: 118rpx;
  padding-left: 36rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.specSelected{
  width: 118rpx;
  height: 118rpx;
  display: flex;
  align-items: center;
  border: 2rpx solid #979797;
}

.specNormal{
  width: 118rpx;
  height: 118rpx;
  display: flex;
  align-items: center;
}

.smallImg{
  width: 118rpx;
}
.otherDiv{
  width: 100%;
  display: flex;
  flex-direction: row;
  position: relative;
  padding: 30rpx 36rpx 0rpx 46rpx;
  box-sizing: border-box;
}
.parameter{
  font-size: 24rpx;
  color: #484848;
}
.iconDiv{
  font-size: 24rpx;
  color: #000000;
  position: absolute;
  right: 46rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.likeIcon{
  width: 40rpx;
  margin-right: 8rpx;
}
.shareIcon{
  width: 30rpx;
  margin-left: 28rpx;
  margin-right: 8rpx;
}

.priceDiv{
  width: 100%;
  box-sizing: border-box;
  padding-left: 36rpx;
  padding-top: 50rpx;
  padding-bottom: 86rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.price{
  font-size: 56rpx;
  color: #D30E26;
}
.originalPrice{
  font-size: 28rpx;
  color: #A6A6A6;
  text-decoration:line-through;/*文字划线*/
  margin-left: 16rpx;
}

.bottomDiv{
  width: 100%;
  height: 80rpx;
  font-size: 22rpx;
  color: #7F7F7F;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.smallIcon{
  width: 24rpx;
  margin-left: 36rpx;/*36rpx*/
  margin-right: 6rpx;/**12rpx*/
}
.moreIcon{
  width: 36rpx;
  margin-left: 18rpx;/*****36rpx****/
}

/* 商品底部导航栏 */
.footer{
  width: 100%;
  height: 208rpx;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: white;
  box-sizing: border-box;
  padding-left: 50rpx;
  padding-right: 30rpx;
}
.navDiv{
  font-size: 20rpx;
  height: 100rpx;
  color: black;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.serviceIcon{
  width: 56rpx;
}
.cartIcon{
  width: 56rpx;
}
.footerBtn{
  display: flex;
  flex-direction: row;
}
.leftBtn{
  width: 266rpx;
  height: 102rpx;
  color: #72C9FA;
  font-size: 26rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
  border: 2rpx solid #72C9FA;
  border-radius: 51rpx 0rpx 0rpx 51rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
.rightBtn{
  width: 266rpx;
  height: 102rpx;
  background-color: #72C9FA;
  color: white;
  font-size: 26rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
  border-radius: 0rpx 51rpx 51rpx 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

