/* pages/productDetail/productDetail.wxss */
.container{
  margin:0px;
  padding: 0px;
  width: 100%;
}
.info{
  width: 100%;
  padding-bottom: 104px;
}
.title{
  font-size: 20px;
  color: black;
  font-weight: bold;
}
.subTitle{
  font-size: 13px;
  color: #7F7F7F;
}
.cycle{
  font-size: 12px;
  color: #A6A6A6;
}
.imgDiv{
  width: 100%;
}
/* 滑块容器 */
.swiperContainer{
  width: 100%;
  height: 290px;
}
.vol-swiper-item {
  box-sizing: border-box;
}
.productImg{

}

/*未选中指示点样式*/
.swiperContainer .wx-swiper-dot{
  width: 6px;
  height: 6px;
  color: #BEBEBE;
}
.swiperContainer .wx-swiper-dots-horizontal{
  /* position: absolute;
  margin-left:240rpx ;
  margin-bottom: 15px;   */
}
/*选中指示点样式*/
.swiperContainer .wx-swiper-dot-active{
  width:18px;
  display: inline-flex;
  height: 6px;
  margin-left: 6px;
  justify-content:space-between;
  color: #747474;
}
.swiperContainer .wx-swiper-dot::before{
  content: '';
  flex-grow: 1; 
  background: rgba(255,255,255,0.8);
  border-radius: 8rpx
}


/* 商品底部导航栏 */
.footer{
  width: 100%;
  height: 104px;
  position: fixed;
  bottom: 0px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.navDiv{
  font-size: 10px;
  color: black;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: black 1px solid;
}
.serviceIcon{
  width: 28px;
}
.cartIcon{
  width: 28px;
}
.footerBtn{
  display: flex;
  flex-direction: row;
}
.leftBtn{
  color: #72C9FA;
  font-size: 13px;
  font-weight: bold;
  letter-spacing: 2px;
  border: 1px solid #72C9FA;
}
.rightBtn{
  background-color: #72C9FA;
  color: white;
  font-size: 13px;
  font-weight: bold;
  letter-spacing: 2px;
}