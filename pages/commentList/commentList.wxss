/* pages/commentList/commentList.wxss */
.container{
  margin: 0px;
  padding: 0px;
  width: 100%;
  background-color: #F2F2F2;
}
.header{
  width: 100%;
}
.commentList{
  width: 100%;
}
.commentItem{
  margin-top: 18rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0px 36rpx;
  background-color: white;
}

.userDiv{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  padding: 26rpx 0px;
  box-sizing: border-box;
}
.avatarImg{
  width: 50rpx;
  border-radius: 25rpx;
}
.userName{
  margin-left: 14rpx;
  font-size: 24rpx;
  color: #000000;
}
.commentTime{
  position: absolute;
  right: 0rpx;
  font-size: 22rpx;
  color: #747474;
}
.divContainer{
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.divLine{
  background: #F2F2F2;
  width: 695.6rpx;
  height: 1.2rpx;
 }
.starDiv{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  padding: 22rpx 0px;
  box-sizing: border-box;
}
.starImg{
  width: 24rpx;
}
.commentText{
  color: #000000;
  font-size: 28rpx;
  line-height: 34rpx;
}

.commentPhotoDiv{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.commentPhoto{
  margin-top: 20rpx;
  margin-right: 20rpx;
}
.commentImg{
  width: 163.04rpx;
  height: 163.04rpx;
  border-radius: 10rpx;
}
.lensDiv{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  padding: 16rpx 0px;
  box-sizing: border-box;
}
.lensName{
  font-size: 24rpx;
  color: #7F7F7F;
}