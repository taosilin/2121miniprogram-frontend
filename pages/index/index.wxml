<!--index.wxml-->
<view class="container">
  <view class="postDiv">
    <swiper class="swiperContainer" style="height:{{postHeight}}px;"
      indicator-dots="{{indicatorDots}}"
      autoplay="{{autoplay}}"
      interval="{{interval}}"
      duration="{{duration}}"
      circular="{{circular}}"
      indicator-color="#FFFFFF"
      indicator-active-color="#FFFFFF"
      bindchange="onSlideChange">
        <block wx:for="{{postList}}" wx:key="index">
          <swiper-item class="vol-swiper-item">
            <view class="swiperItem">
              <image class="postImg" src="{{item.imgUrl}}" mode="widthFix" style="width:{{windowWidth}}px;"></image>
            </view>
          </swiper-item>
        </block>
    </swiper>  
  </view>
  
  <view class="couponDiv">
    <image class="couponImg" src="../../image/coupon.jpg" mode="widthFix" style="width:{{windowWidth}}px;"></image>
  </view>

