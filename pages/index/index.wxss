.container{
  margin:0px;
  /* padding-bottom: 201rpx; */
  position: absolute;
}
.postDiv{
  width: 100%;
}
.postImg{
  width: 100%;
}
.couponDiv{
  margin-top: 16rpx;
}

/*滑块容器*/
.swiperContainer{
  padding-top: 0px;
}
.vol-swiper-item {
  box-sizing: border-box;
}
/*未选中指示点样式*/
.swiperContainer .wx-swiper-dot{
  width: 12rpx;
  height: 12rpx;
}
.swiperContainer .wx-swiper-dots-horizontal{
  position: absolute;
  margin-left:240rpx ;
  margin-bottom: 30rpx;  
}

/*选中指示点样式*/
.swiperContainer .wx-swiper-dot-active{
  width:36rpx;
  display: inline-flex;
  height: 12rpx;
  margin-left: 12rpx;
  justify-content:space-between;
}
.swiperContainer .wx-swiper-dot::before{
  content: '';
  flex-grow: 1; 
  background: rgba(255,255,255,0.8);
  border-radius: 8rpx
}

