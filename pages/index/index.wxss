.tabbarDiv{
  width: 100%;
  position: fixed;
  bottom: 0px;
}

.popup{
  width: 100%;
  height: 100%;
  position: fixed;
  overflow-y: scroll;
  background-color: rgba(0, 0, 0, 0.74);
  z-index: 99;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.z-height{
  overflow-y: scroll;
  background: transparent;
  display: flex;
  flex-direction: column;
  position: absolute;
  overflow: visible;
  z-index: 100;
  align-items: center;
}
.popupImg{
  width: 750rpx;
  border-radius: 28rpx;
  margin-bottom: 32rpx;
}
.closeIcon{
  width: 67rpx;
}