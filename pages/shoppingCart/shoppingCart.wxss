/* pages/shoppingCart/shoppingCart.wxss */
.container{
  margin: 0px;
  padding-bottom: 201rpx;
}
.productDiv{
  width: 100%;
  padding-bottom: 54px;
}
.productItem{
  width: 100%;
  display: flex;
  flex-direction: row;
  padding-top: 19px;
  padding-bottom: 19px;
  border-bottom: 1px solid #EAEAEA;
}
.selectDiv{
  padding-left: 15px;
  padding-right: 15px;
  display: flex;
  align-items: center;
}
.selectProduct{

}
.imgDiv{
  width: 103px;
  height: 103px;
  align-items: center;
  display: flex;
}
.productImg{
  width: 103px;
}
.selectBtn{
  width: 67px;
  height: 25px;
  font-size: 12px;
  color: #72C9FA;
  border:1px solid #72C9FA;
  border-radius: 13.5px;
  position: relative;
  bottom: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.contentDiv{
  width: 230px;
  margin-left: 15px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.content{
  font-size: 14px;
  color: #000000;
}
.priceDiv{
  display: flex;
  flex-direction: row;
  font-size: 14px;
  color: #000000;
  position: relative;
  height: 27px;
}
.stepper{
  position: absolute;
  right: 0px;
}
.footer{
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 11.3vh;
  align-items: center;
  justify-content: space-between;
  z-index: 9;
  width: 100%;
  height: 6.02vh;
  border-top:1px solid #EAEAEA;
  background-color: white; 
}
.radioDiv{
  font-size: 14px;
  color: black;
  margin-left: 15px;
}
.sumDiv{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 15px;
}
.sum{
  font-size: 14px;
  color: #000000;
}
.settleBtn{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 104px;
    height: 43px;
    background-color: #72C9FA;
    color: white;
    font-size: 16px;
    border-radius: 21.5px;
    margin-left: 16px;
}


.nothingDiv{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.noProductImg{
  padding:110px 75px 42px 75px;
}
.promptText{
  font-size: 14px;
  letter-spacing: 2px;
  color: #585858;
  margin-bottom: 22px;
}
.shopBtn{
  width: 81px;
  height: 38px;
  border: solid 1px #585858;
  border-radius: 19px;
  font-size: 14px;
  color: #585858;
  letter-spacing: 1px;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tabbarDiv{
  width: 100%;
  position: fixed;
  bottom: 0px;
  z-index: 10;
}