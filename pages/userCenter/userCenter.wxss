/* pages/userCenter/userCenter.wxss */
.container{
  margin: 0px;
  padding: 0px;
}
.card{
  width:100%;
  height: 100%;
}
.cardBkg{
  width:100%;
  position:absolute;
}
.userInfo{
  display: flex;
  position:absolute;
  z-index:1;
  margin-left: 80px;
  margin-top: 45px;
}
.avatar{
  height:60px;
  width: 60px;
  border-radius: 50%;
}
.content{
  width:120px;
  margin-left: 10px;
}
.username{
  font-size:14px;
}
.Info{
  font-size:12px;
  color:#FFB019
}
.myOrder{
  background-color: white;
  opacity: 0.9;
  position:absolute;
  z-index:2;
  margin-top: 170px;
  width: 90%;
  height: 114px;
  border-style: solid;
  box-shadow:0px 2px 4px 2px #DDDDDD;
  border-width: 0rpx;
  border-radius: 15px;
  font-size: 14px;
}
.ordertext{
  height: 40px;
  box-sizing: border-box;
  font-size: 14px;
  padding: 13px 18px;
}
.divContainer{
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}
.divLine{
  background: #E0E3DA;
  position: absolute;
  left: 5%;
  right: 5%;
  width: 90%;
  height: 3rpx;
 }
 .arrow{
  width: 10px;
  height: 10px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  position: absolute;
  right: 14px;
  transform: rotate(45deg);
  top:15px;
} 
.orders{
  display: flex;
  padding: 15px;
}
.orderList{
  width:100px;
  display: flex;
  flex-direction: column;
  align-items: center;
  vertical-align: center;
  justify-content: center;
}
.orderstate-pay{
  width:27px;
}
.orderstate-receive{
  width:33px;
}
.orderstate-comment{
  width:25px;
}
.orderstate-refund{
  width:25px;
}
.statetext{
  /* font-size: 14px; */
}
.others{
  width: 100%;
  height: 200px;
  position:absolute;
  margin-top: 300px;
  padding-left: 25px;
  font-size: 14px;
  color: #5B5B5B;
  /* background-color: #FFB019; */
}
.function{
  /* padding-top: 20px;
  padding-bottom: 20px; */
  position: relative;
  width: 100%;
  height: 50px;
  box-sizing: border-box;
}
.othericon-favorites{
  width: 26px;
}
.othericon-address{
  width: 14px;
}
.othericon-service{
  width: 24px;
}
.othericon-policy{
  width: 20px;
}
.functext{
  margin-left: 5px;
}
.arrow1{
  position: absolute;
  width: 10px;
  height: 10px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  right: 10%;
  transform: rotate(45deg);
  top:15px;
} 
.more{
  display: flex;
  background-color: white;
  position:absolute;
  margin-top: 560px;
  width: 90%;
  height: 40px;
  border-style: solid;
  box-shadow:0px 2px 4px 2px #DDDDDD;
  border-width: 0rpx;
  border-radius: 15px;
  font-size: 14px;
  padding: 15px;
}
.moreicon{
    width: 44px;
}
.moreinfo{
  display: flex;
}
.moretext{
  font-size: 14px;
  display: flex;
  flex-direction: column;
  margin-left: 15px;
  width:150px;
}
.follow-btn{
  color: #FFFFFF;
  font-size: 10px;
  background-color: #646ED5;
  border-radius: 15px;
  width:63px;
  height:29px;
  display: flex;
  align-items: center;
  vertical-align: center;
  justify-content: center;
  margin-left: 90px;
}