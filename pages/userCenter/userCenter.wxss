/* pages/userCenter/userCenter.wxss */
.container{
  margin: 0px;
  padding-bottom: 201rpx;
  box-sizing: border-box;
}
.card{
  width:100%;
  height: 550rpx;
  /* box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;*/
  position: relative; 
}
.cardBkg{
  width:100%;
  position:absolute;
  z-index: -1;
}
.userInfo{
  display: flex;
  flex-direction: row;
  align-items: center;
  position:absolute;
  z-index:1;
  margin-left: 160rpx;
  margin-top: 90rpx;
}
.avatar{
  height:120rpx;
  width: 120rpx;
  border-radius: 50%;
}
.content{
  width:240rpx;
  margin-left: 20rpx;
}
.username{
  font-size:28rpx;
}
.Info{
  font-size:24rpx;
  color:#FFB019
}
.myOrder{
  background-color: white;
  opacity: 0.9;
  position:absolute;
  z-index:2;
  margin-top: 340rpx;
  width: 90%;
  height: 228rpx;
  box-shadow:2px 3px 5px 2px #E1E1E1;
  border-radius: 40rpx;
  font-size: 28rpx;
}
.ordertext{
  height: 80rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  padding: 26rpx 36rpx;
}
.divContainer{
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}
.divLine{
  background: #F2F2F2;
  position: absolute;
  left: 5%;
  right: 5%;
  width: 90%;
  height: 2rpx;
 }
 .arrow{
  width: 20rpx;
  height: 20rpx;
  border-top: 2px solid #5B5B5B;
  border-right: 2px solid #5B5B5B;
  position: absolute;
  right: 28rpx;
  transform: rotate(45deg);
  top:30rpx;
} 
.orders{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}
.orderList{
  width:200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  vertical-align: center;
  justify-content: center;
}
.line{
  width: 3rpx;
  /* height: 100rpx; */
  background-color: #F2F2F2;
}
.orderstate-pay{
  width:54rpx;
}
.orderstate-receive{
  width:66rpx;
}
.orderstate-comment{
  width:50rpx;
}
.orderstate-refund{
  width:50rpx;
}
.statetext{
  font-size: 28rpx;
}
.others{
  width: 100%;
  height: 600rpx;
  font-size: 28rpx;
  color: #5B5B5B;
}
.function{
  padding-left: 10%;
  position: relative;
  width: 100%;
  height: 120rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.iconborder{
  width:60rpx;
  height:60rpx;
  display: flex;
  align-items: center;
  vertical-align: center;
  justify-content: center;
}
.othericon-favorites{
  width: 52rpx;
}
.othericon-address{
  width: 28rpx;
}
.ordericon-coupon{
  width: 50rpx;
}
.othericon-service{
  width: 48rpx;
}
.othericon-policy{
  width: 40rpx;
}
.functext{
  margin-left: 20rpx;
}
.arrow1{
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  right: 10%;
  transform: rotate(45deg);
} 
.more{
  width: 90%;
  height: 148rpx;
  box-sizing: border-box;
  padding-left: 64rpx; 
  position: relative;
  display: flex;
  align-items: center;
  background-color: white;
  box-shadow:2px 3px 5px 2px #E1E1E1;
  border-radius: 20rpx;
}
.moreicon{
    width: 88rpx;
}
.moreinfo{
  display: flex;
  flex-direction: row;
}
.moretext{
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  margin-left: 46rpx;
}
.follow-btn{
  color: #FFFFFF;
  font-size: 20rpx;
  background-color: #646ED5;
  border-radius: 29rpx;
  width:126rpx;
  height:58rpx;
  position: absolute;
  right: 64rpx;
  display: flex;
  align-items: center;
  vertical-align: center;
  justify-content: center;
}
.tabbarDiv{
  width: 100%;
  position: fixed;
  bottom: 0px;
  z-index: 10;
}
/* 授权登录按钮 */
.authorizedLogin{
  background-color: #72C9FA;
  color: #ffffff;
}