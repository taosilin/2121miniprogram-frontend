/* pages/myAddress/myAddress.wxss */
.container{
  margin: 0px;
  padding: 0px;
}
.addressList{
  width: 100%;
  position: relative;
}
.addressItem{
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  padding-top: 12px;
  padding-left: 20px;
  padding-right: 20px;
  padding-bottom: 19px;
}
.infoDiv{

}
.radioDiv{
  font-size: 12px;
}
.arrow{
  width: 10px;
  height: 10px;
  border-top: 2px solid #5B5B5B;
  border-right: 2px solid #5B5B5B;
  transform: rotate(45deg);
  position: absolute;
  right: 20px;
  top:67px;
} 

.importantInfo{
  font-size: 14px;
  color: #000000;
  font-weight: bold;
}
.addressDetail{
  font-size: 14px;
  color: #838383;
}
.btnDiv{
  display: flex;
  align-items: center;
  margin-top: 31px;
}
.addBtn{
  width: 206px;
  height: 49px;
  background-color: #215470;
  color: white;
  font-size: 16px;
  font-weight:bold;
  border-radius: 10px;
  display: flex;
  align-items: center;
  vertical-align: center;
  justify-content: center;
}