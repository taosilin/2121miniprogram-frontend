<!--pages/myAddress/myAddress.wxml-->
<view class="container">
  <view class="addressList">
    <block wx:for="{{addresses}}" wx:key="{{index}}" data-index="{{index}}">
      <view class="addressItem" bindtap="onChangeAddress" data-id="{{index}}">
        <view class="infoDiv">
          <view class="importantInfo" style="margin-bottom:8px;">{{item.name}}</view>
          <view class="importantInfo">{{item.tel}}</view>
          <view class="addressDetail">{{item.province}} {{item.city}} {{item.district}}</view>
          <view class="addressDetail" style="margin-bottom:19px;">{{item.detail}}</view>
          <view class="radioDiv">
            <radio class="defaultAdd" value="{{index}}" checked="{{item.isDefult}}" color="#215470"/>设为默认地址
          </view>
        </view>
        <view class='arrow'></view>     
      </view>
      <view class="divContainer">
        <view class="divLine"></view>
      </view>
    </block>
  </view>
  <view class="btnDiv">
    <view class="addBtn" bindtap="goToAddAddress">+ 新增地址</view>
  </view>
</view>
