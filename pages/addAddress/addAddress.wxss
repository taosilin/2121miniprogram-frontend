/* pages/addAddress/addAddress.wxss */
.container{
  margin: 0px;
  padding: 0px;
}
.formList{
  position: relative;
  width: 100%;
  font-size: 28rpx;
  color: #616161;
  font-weight: bold;
  margin-bottom: 92rpx;
}
.formItem{
  height: 154rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #F9F9F9;
  padding-left: 30rpx;
  border-bottom: 2rpx solid white;
}
.btnDiv{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.importantBtn{
  display: flex;
  align-items: center;
  vertical-align: center;
  justify-content: center;
  width: 412rpx;
  height: 98rpx;
  border-radius: 49rpx;
  background-color: #72C9FA;
  color: white;
  font-size: 32rpx;
}
.normalBtn{
  display: flex;
  align-items: center;
  vertical-align: center;
  justify-content: center;
  width: 412rpx;
  height: 98rpx;
  border-radius: 49rpx;
  color: #72C9FA;
  border:#72C9FA solid 2rpx;
  font-size: 32rpx;
}
.input{
  width: 540rpx;
  height: 150rpx;
}
.picker{
  width: 500rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}