/* pages/myOrders/myOrders.wxss */
.container{
  display: flex;
  flex-direction: column;
  margin: 0px;
  padding: 0px;
}
.order{
  width:90%;
  border-color: #D7D7D7;
  border-style: solid; 
  border-width: 1px;
  border-radius: 10px;
  margin-top: 23px;
  overflow:hidden;
  position: relative;
}
.header{
  font-size: 13px;
  color: #000000;
  background-color: #F6F6F6;
  display: flex;
  align-items: center;
  flex-direction: row;
  position: relative;
  width: 100%;
  height: 30px;
  border: thin;
  border-radius: 10px;
}
.lefttext{
  position: absolute;
  left:11px;
}
.midtext{
  position: absolute;
  width: 100%;
  text-align: center;
}
.righttext{
  position: absolute;
  right: 16px;
}
.imgDiv{
  width: 100px;
  height: 102px;
  border: solid #979797 1px;
  display: flex;
  align-items: center;
  margin-left: 8px;
  position: absolute;
}
.orderpicture{
  position: absolute;
  width: 100px;
}
.content{
  position: relative;
  display: flex;
  flex-direction: row;
  padding-top: 15px;
  padding-bottom: 15px;
  height: 102px;
}
.info{
  position: absolute;
  left: 119px; 
  display: flex;
  flex-direction: column;
  font-size: 13px;
  color: #3d3d3d;
}
.infotext{
  margin-bottom: 8px;
}
.rightinfo{
  text-align: right;
  position: absolute;
  right: 8px;
  display: flex;
  flex-direction: column;
  font-size: 14px;
}
.footer{
  height: 72px;
  position: relative;
}
.total{
  position: absolute;
  right: 8px;
  height: 30px;
  font-size: 13px;
}
.btnDiv{
  display: flex;
  flex-direction: row;
  position: absolute;
  right: 8px;
  top: 30px;
}
.important-btn{
  /* position: absolute;
  top:30px; */
  width:83px;
  height:29px;
  border-radius: 7px;
  font-size: 14px;
  background-color: #215470;
  color: white;
  display: flex;
  align-items: center;
  vertical-align: center;
  justify-content: center;
  letter-spacing:2px; /*字间距*/
  margin-left: 12px;
}
.normal-btn{
  /* position: absolute;
  top:30px; */
  width:83px;
  height:29px;
  border-radius: 7px;
  font-size: 14px;
  color: #3D3D3D;
  border: solid #D5D5D5 1px;
  display: flex;
  align-items: center;
  vertical-align: center;
  justify-content: center;
  letter-spacing:2px;/*字间距*/
  margin-left: 12px;
}
.noOrderContainer{
  position: relative;
  width: 100%;
  height: 700px; /*需要判断机型，动态设置高度*/
}
.noOrderImgDiv{
  display: flex;
  flex-direction: column;
  align-items: center;
  vertical-align: center;
  justify-content: center;
  width: 100%;
  padding-top: 50px;
  padding-bottom: 38px;
}
.noOrderImg{
  width: 165px;
  height: 140px;
}
.noOrderTextDiv{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 14px;
  letter-spacing:2px;/*字间距*/
  color: #585858;
}
.recommendDiv{
  position: absolute;
  height:313px;
  margin-left:34px;
  margin-right: 34px;
  box-sizing: border-box;
  bottom: 0px;
}
.rcmdHeader{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}
.titleText{
  font-size: 16px;
  color: #000000;
  letter-spacing: 2.5px;
}
.changeText{
  position: absolute;
  right: 0px;
  text-decoration-line: underline;
  font-size: 14px;
  color: #5B5B5B;
}
.rcmdContent{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content : space-between;/**/
  align-content: space-between;/**/
  padding-top: 26px;
  padding-bottom: 37px;
}
.rcmdItem{
  width: 167px;
  height: 69px;
  background-color: #F1F1F1;
  border-radius: 19px;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 11px;
}
.rcmdImg{
  width: 91px;
}
.rcmdInfo{
  font-size: 11px;
  color: #3D3D3D;
  padding-left: 7px;
}