/* pages/myOrders/myOrders.wxss */
.container{
  display: flex;
  flex-direction: column;
  margin: 0px;
  padding: 0px;
}
.order{
  width:90%;
  height:120px;
  border-color: #000000;
  border-style: solid; 
  border-width: 1px;
  border-radius: 10px;
  margin-top: 10px;
  overflow:hidden;
}
.header{
  font-size: 13px;
  color: #000000;
  background-color: #F6F6F6;
  padding-top: 5px;
  padding-bottom: 5px;
}
.orderpicture{
  position: absolute;
  width: 100px;
  height: 100px;
  border: solid #979797 1px;
}
.content{
  position: relative;
  display: flex;
  flex-direction: row;
}
.info{
  position: absolute;
  left: 110px;
  display: flex;
  flex-direction: column;
  font-size: 13px;
  color: #3d3d3d;
}
.rightinfo{
  position: absolute;
  right: 0px;
  display: flex;
  flex-direction: column;
  font-size: 14px;
}