/* pages/myOrders/myOrders.wxss */
.container{
  display: flex;
  flex-direction: column;
  margin: 0px;
  padding: 0px;
  background-color: #F2F2F2;
}
.labelbar{
  width: 100%;
  box-sizing: border-box;
  padding:8px,26px,6px,26px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
}
.order{
  width: 90%;
  border-radius: 10px;
  margin-top: 23px;
  overflow: hidden;
  position: relative;
  
}
.header{
  font-size: 13px;
  color: #000000;
  background-color: #FBFBFB;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-around;
  position: relative;
  width: 100%;
  height: 30px;
  border: thin;
  border-radius: 10px;
}
.lefttext{
  
}
.midtext{
  
}
.righttext{
  
}
.imgDiv{
  width: 100px;
  height: 102px;
  display: flex;
  align-items: center;
  margin-left: 8px;
  position: absolute;
}
.orderpicture{
  position: absolute;
  width: 100px;
}
.content{
  position: relative;
  display: flex;
  flex-direction: row;
  padding-top: 15px;
  padding-bottom: 15px;
  height: 102px;
  background-color: white;
}
.info{
  position: absolute;
  left: 119px; 
  display: flex;
  flex-direction: column;
  font-size: 13px;
  color: #3d3d3d;
}
.infotext{
  margin-bottom: 8px;
}
.rightinfo{
  text-align: right;
  position: absolute;
  right: 8px;
  display: flex;
  flex-direction: column;
  font-size: 14px;
}
.footer{
  height: 72px;
  position: relative;
  background-color: white;
}
.total{
  position: absolute;
  right: 8px;
  height: 30px;
  font-size: 13px;
}
.btnDiv{
  display: flex;
  flex-direction: row;
  position: absolute;
  right: 8px;
  top: 30px;
}
.important-btn{
  width:166rpx;
  height:58rpx;
  border-radius: 29rpx;
  font-size: 28rpx;
  background-color: #72C9FA;
  color: white;
  display: flex;
  align-items: center;
  vertical-align: center;
  justify-content: center;
  letter-spacing:4rpx; /*字间距*/
  margin-left: 12px;
}
.normal-btn{
  width:166rpx;
  height:58rpx;
  border-radius: 29rpx;
  font-size: 28rpx;
  color: #3D3D3D;
  border: solid #D5D5D5 2rpx;
  display: flex;
  align-items: center;
  vertical-align: center;
  justify-content: center;
  letter-spacing:4rpx;/*字间距*/
  margin-left: 12px;
}

.noOrderContainer{
  position: relative;
  width: 100%;
  background-color: white;
  /* height: 700px;  */
  /*需要判断机型，动态设置高度*/
}
.noOrderImgDiv{
  display: flex;
  flex-direction: column;
  align-items: center;
  vertical-align: center;
  justify-content: center;
  width: 100%;
  padding-top: 64rpx;
  padding-bottom: 48rpx;
}
.noOrderImg{
  width: 224rpx;
}
.noOrderTextDiv{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  letter-spacing:4rpx;/*字间距*/
  color: #585858;
}
.recommendDiv{
  position: absolute;
  height:626rpx;
  margin-top: 60rpx; /*??????????????*/
  box-sizing: border-box;
}
.rcmdHeader{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  padding-top: 34rpx;
  padding-bottom: 34rpx;
  padding-left: 56rpx;
}
.titleText{
  font-size: 32rpx;
  color: #000000;
  letter-spacing: 4rpx;
}
.productList{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  justify-content:space-between;
}
.productItem{
  position: relative;
  padding-top: 60rpx;
  padding-bottom: 44rpx;
  box-sizing: border-box;
  height: 520rpx;
  border: 2rpx solid #F2F2F2;
}
.productImg{
  
}
.newIcon{
  width: 88rpx;
  position: absolute;
  top: 48rpx;
  left: -4rpx;
}
.title{
  font-size: 24rpx;
  color: #000000;
  letter-spacing: 1rpx;
  margin-top: 40rpx;
  margin-left: 28rpx;
  margin-bottom: 2rpx;
}
.price{
  font-size: 28rpx;
  color: #000000;
  margin-left: 28rpx;
}
.saledPrice{
  font-size: 28rpx;
  color: #D30E26;
  margin-right: 12rpx;
  margin-left: 28rpx;
}
.originalPrice{
  font-size: 28rpx;
  color: #A6A6A6;
  text-decoration:line-through;/*文字划线*/
}
.priceDiv{
  display: flex;
  flex-direction: row;
  position: relative;
}
.comments{
  font-size: 22rpx;
  color: #ADADAD;
  position: absolute;
  right: 26rpx;
  top: 2rpx;
}