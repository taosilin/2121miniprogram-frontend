/* components/fliter/fliter.wxss */
.container{
  display: flex;
  align-items: center;
  justify-content: center;
}
.fliterHeader{
  font-size: 13px;
  color: black;
  font-weight: bold;
}
.arrow{
  display: inline-block;
  border: 4px solid transparent;
  border-top: 4px solid #747474;
  margin-left: 5px;
  margin-top: 10rpx;
}
.disappear {
  display: none;
}
.show {
  display: block;
}
.fliterContainer{
  width: 100%;
  height: 100%;
  position: absolute;
  overflow-y: scroll;
  z-index: 10;
  box-sizing: border-box;
  padding: 3px 21px;
  background-color: white;
}
.z-height{
  overflow-y: scroll;
  
}
.fliterList{
  width: 100%;
  
}
.fliterItem{
  margin-top: 57px;
}
.fliterName{
  font-size: 13px;
  color: black;
  font-weight: bold;
  margin-bottom: 19px;
}
.fliterOptions{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.optionItem{
  height: 40px;
  border-radius: 20px;
  margin-left: 15px;
  margin-bottom: 19px;
  box-sizing: border-box;
  padding: 11px 22px;
  font-size: 13px;
  background-color: #F7F7F7;
}
.selectItem{
  height: 40px;
  border-radius: 20px;
  margin-left: 15px;
  margin-bottom: 19px;
  box-sizing: border-box;
  padding: 11px 22px;
  font-size: 13px;
  background-color: #F7F7F7;
  color: #72C9FA;
  border: 1px solid #72C9FA;
}
.btnDiv{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 16px;
  border-top: 1px solid #EAEAEA;
  box-sizing: border-box;
  padding-top: 21px;
}
.leftBtn{
  width: 43%;
  height: 43px;
  border-radius: 24px;
  color: black;
  border: 1px solid #CFCFCF;
  display: flex;
  align-items: center;
  justify-content: center;
}
.rightBtn{
  width: 43%;
  height: 43px;
  border-radius: 24px;
  color: white;
  background-color: #72C9FA;
  display: flex;
  align-items: center;
  justify-content: center;
}