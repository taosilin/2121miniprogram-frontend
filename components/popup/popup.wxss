/* components/popup/popup.wxss */
.container{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.45);
}
.popupContainer{
  display: flex;
  flex-direction: column;
  align-items: center;

  position: absolute;
  left: 50%;
  top: 50%;

  width: 76.328%;
  height: 258px;
  box-sizing: border-box;
  padding-bottom: 39px;
  overflow: hidden;

  border-radius: 10px;
  transform: translate(-50%, -50%); 
  background: white;
  font-size: 14px;

}
.popupTitle{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding-top: 14px;
  padding-bottom: 14px;
}
.divLine{
  background-color: #D5D5D5;
  width: 87.34%;
  height: 1px;
 }
 .popupRow{
  width: 87.34%;
  margin-top: 14px;
 }