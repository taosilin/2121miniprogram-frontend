/* components/grantDialog/grantDialog.wxss */
.container{
  width: 100%;
}
.background{
  width: 100%;
  height: 100%;
  position: fixed;
  overflow-y: scroll;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 19;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.z-height{
  width: 578rpx;
  height: 254rpx;
  border-radius: 20rpx;
  overflow-y: scroll;
  background: white;
  display: flex;
  flex-direction: column;
  position: absolute;
  overflow: visible;
  z-index: 20;
}
.infoDiv{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.btnDiv{
  display: flex;
  flex-direction: row;
}
.title{
  font-weight: bold;
  font-size: 28rpx;
  letter-spacing: 1rpx;
  margin-top: 52rpx;
  margin-bottom: 16rpx;
}
.info{
  color: #9F9E9E;
  font-size: 28rpx;
  letter-spacing: 1rpx;
  margin-bottom: 36rpx;
}
.confirmBtn{
  color: #72C9FA;
  font-size: 28rpx;
  font-weight: normal;
}
.cancelBtn{
  color: #9F9E9E;
  font-size: 28rpx;
  font-weight: normal;
}
.hr{
  width: 100%;
  height: 2rpx;
  background-color: #E7E7E7;
}