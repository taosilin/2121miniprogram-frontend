/* components/actionSheet/actionSheet.wxss */
.container{
  width: 100%;
}
.action-sheet{
  width: 100%;
  height: 100%;
  position: absolute;
  overflow-y: scroll;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 10;
}
.z-height{
  width: 100%;
  height: 531px;
  overflow-y: scroll;
  background: white;
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom: 0px;
  border-radius: 19px 19px 0px 0px;
  overflow: visible;
}
.imgDiv{
  width: 126px;
  height: 126px;
  border: 1px solid #CACACA;
  border-radius: 10px;
  overflow: hidden;
  position: absolute;
