<!--components/stepper/stepper.wxml-->
<view class="stepper">  
  <!-- 减号 -->  
  <text class="{{num>1?'normal':'disabled'}}" bindtap="bindMinus">-</text>  
  <!-- 数值 -->  
  <input type="number" bindchange="bindManual" value="{{num}}" />  
  <!-- 加号 -->  
  <text class="normal" bindtap="bindPlus">+</text>
</view>
